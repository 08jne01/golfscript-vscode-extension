{
	"name": "mock-debug",
	"version": "0.1.4",
	"publisher": "vscode",
	"description": "Starter extension for developing debug adapters for VS Code.",
	"engines": { "vscode": "*" },
	"contributes": {
		"debuggers": [{
			"type": "mock",
			"enableBreakpointsFor": { "languageIds": ["markdown"] },

			"program": "./debugAdapters/mock/mockDebug.js",
			"runtime": "node",

			"initialConfigurations": [
				{
					"name": "Mock-Debug",
					"type": "mock",
					"request": "launch",
					"program": "readme.md",
					"stopOnEntry": true
				}
			],

			"configurationAttributes": {
				"program": {
					"type": "string",
					"description": "Workspace relative path to a text file.",
					"default": "readme.md"
				},
				"stopOnEntry": {
					"type": "boolean",
					"description": "Automatically stop after launch.",
					"default": true
				}
			}
		}]
	}
}